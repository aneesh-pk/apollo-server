CREATE TABLE users(
    id serial PRIMARY KEY,
    email VARCHAR (355) UNIQUE NOT NULL,
    name VARCHAR (50) NOT NULL,
    password VARCHAR (500) NOT NULL,
    created_on TIMESTAMP,
    last_login TIMESTAMP
);


CREATE TABLE files(
    id serial PRIMARY KEY,
    user_id integer NOT NULL,
    name VARCHAR (355) NOT NULL,
    type VARCHAR (355)
);